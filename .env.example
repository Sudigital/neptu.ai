# Neptu.ai Environment Variables
# Copy this file to .env and fill in your values
# Single source of truth - all apps read from this file

# Colosseum Agent Hackathon Credentials
COLOSSEUM_AGENT_ID=
COLOSSEUM_AGENT_NAME=
COLOSSEUM_API_KEY=
COLOSSEUM_CLAIM_CODE=
COLOSSEUM_VERIFICATION_CODE=

# Privy Authentication
VITE_PRIVY_APP_ID=
PRIVY_APP_SECRET=

# PostgreSQL Database
DATABASE_URL=postgresql://neptu:neptu@localhost:5432/neptu

# Redis
REDIS_URL=redis://localhost:6379

# Solana Network (localnet | devnet | mainnet)
# Change this single value to switch all apps
SOLANA_NETWORK=devnet

# API
API_URL=http://localhost:3000
PORT=3000
