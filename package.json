{
  "name": "neptu",
  "version": "0.1.0",
  "private": true,
  "description": "Your Balinese Soul, On-Chain",
  "workspaces": [
    "apps/*",
    "docs",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo dev --filter=!@neptu/mobile",
    "build": "turbo build",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "format:check": "oxfmt --check .",
    "format": "oxfmt .",
    "api": "bun run --filter=@neptu/api dev",
    "cli": "bun run --filter=@neptu/cli dev",
    "web": "bun run --filter=@neptu/web dev",
    "worker": "bun run --filter=@neptu/worker dev",
    "docs": "bun run --filter=@neptu/docs dev",
    "translate": "bun run scripts/translate-i18n.ts",
    "translate:diff": "bun run scripts/translate-i18n.ts --diff",
    "db:push": "bun run --cwd packages/drizzle-orm drizzle-kit push",
    "db:migrate": "bun run --cwd packages/drizzle-orm drizzle-kit migrate",
    "db:generate": "bun run --cwd packages/drizzle-orm drizzle-kit generate",
    "db:seed:api-pricing": "bun run scripts/seed-api-pricing.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@privy-io/react-auth": "^3.13.1",
    "recharts": "^3.7.0",
    "wrangler": "4.64.0"
  },
  "devDependencies": {
    "@neptu/typescript-config": "workspace:*",
    "@types/bun": "^1.3.8",
    "husky": "^9.1.7",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "sharp": "^0.34.5",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vue": "^3.5.27"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.23",
  "peerDependencyRules": {
    "ignoreMissing": [
      "react",
      "react-dom"
    ],
    "allowedVersions": {
      "react": ">=19.0.0"
    }
  }
}
